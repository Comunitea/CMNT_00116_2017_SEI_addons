<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_invoice_talendis_document">

        <div class="article o_report_layout_standard">
<!--CABECERA-->
            <div class="header">
                <div class="text-center">
                    <div class="row">
                        <img t-if="o.company_id.logo" t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.logo)" style="max-height: 45px;" class="pull-left"/>
                    </div>
                    <div class="row">
                        <div>
                            <div>
                                <div>
                                    <span t-field="o.company_id.partner_id.name"/>
                                </div>
                                <span t-field="o.company_id.partner_id" t-field-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>
                                <span t-field="o.company_id.email"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

<!--PAGINA-->
            <br/>
            <div class="page">
                <div class="text-center"><strong>CLIENTE</strong></div>
                 <div class="text-center" style="border-top: 1px solid black;">
                    <div>razón social <span t-field="o.partner_id"/></div>
                    <div>CIF <span t-field="o.partner_id.vat"/></div>
                    <div>dirección <span t-field="o.partner_id.document_address"/></div>
                </div>
                <br/><br/>
                <div>
                    <div class="col-xs-3 col-xs-offset-2"><strong>FECHA</strong></div>
                    <div class="col-xs-offset-8"><strong>NÚMERO FACTURA</strong></div>
                </div>
                <div>
                    <div class="col-xs-3 col-xs-offset-1" style="border-top: 1px solid black;"/>
                    <div class="col-xs-4 col-xs-offset-7" style="border-top: 1px solid black;"/>
                </div>

                <div>
                    <div class="col-xs-3 col-xs-offset-2"><span t-field="o.date_invoice"/></div>
                    <div class="col-xs-offset-8"><span t-field="o.number"/></div>
                </div>
                <br/>
                <div class="text-center"><strong>CONCEPTO</strong></div>
                <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>

                <t t-foreach="o.order_lines_layouted()" t-as="page">
                    <table class="table table-condensed borderless" >
                        <thead>
                            <tr>
                                <th>Description</th>
                                <th class="text-right">Quantity</th>
                                <th class="text-right">Unit Price</th>
                                <th t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">Disc.(%)</th>
                                <th class="text-right" groups="sale.group_show_price_subtotal">Amount</th>
                                <th class="text-right price_tax_included" groups="sale.group_show_price_total">Total Price</th>
                            </tr>
                       </thead>
                       <tbody class="order_tbody">
                            <t t-foreach="page" t-as="layout_category">

                                <t t-if="layout_category_size > 1 or page_size > 1" groups="sale.group_sale_layout">
                                    <tr class="active">
                                        <td colspan="7" style="font-weight: bold;">&amp;bull;
                                            <t t-esc="layout_category['name']"/>
                                        </td>
                                    </tr>
                                </t>

                                <!-- Lines associated -->
                                <t t-foreach="layout_category['lines']" t-as="l">
                                    <tr>
                                        <td><span t-field="l.name"/></td>
                                        <td class="text-right">
                                            <span t-field="l.quantity"/>
                                            <span t-field="l.price_unit" groups="product.group_uom"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="l.price_unit"/>
                                        </td>
                                        <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                            <span t-field="l.discount"/>
                                        </td>
                                        <td class="text-right" groups="sale.group_show_price_subtotal">
                                            <span t-field="l.price_subtotal"/>
                                        </td>
                                        <td class="text-right" groups="sale.group_show_price_total">
                                            <span t-field="l.price_total"/>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>

                    <div class="clearfix">
                        <div class="row" name="total">
                            <div class="col-xs-4 pull-right">
                                <table class="table table-condensed" style="min-width: 200px;max-width: 350px;">
                                    <tr class="border-black">
                                        <td><strong>Subtotal</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_untaxed"
                                                />
                                        </td>
                                    </tr>
                                    <t t-foreach="o._get_tax_amount_by_group()" t-as="amount_by_group">
                                        <tr>
                                            <t t-if="amount_by_group[3] == 1 and o.amount_untaxed == amount_by_group[2]">
                                                <td>
                                                    <span t-esc="amount_by_group[0]"/>
                                                    <span>&amp;nbsp;<span>on</span>&amp;nbsp;<t t-esc="amount_by_group[2]"/></span>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="amount_by_group[1]"/>
                                                </td>
                                            </t>
                                            <t t-else ="">
                                                <td>
                                                    <span t-esc="amount_by_group[0]"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="amount_by_group[1]"/>
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                    <tr class="border-black">
                                        <td><strong>Total</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_total"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>

                </t>


            </div>




<!--PIE-->
            <div class="footer">
                    <div class="text-center" style="border-top: 1px solid black;">
                        <div class="text-muted">
                            Page: <span class="page"/> / <span class="topage"/>
                        </div>
                    </div>
            </div>
        </div>




        </template>

        <template id="report_invoice_talendis">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="custom_documents.report_invoice_talendis_document" t-lang="o.partner_id.lang"/>
                </t>
            </t>
        </template>





    </data>
</odoo>
